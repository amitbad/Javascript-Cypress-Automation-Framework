{
  "name": "cypress-test-automation-framework",
  "version": "1.0.0",
  "description": "Cypress Test Automation Framework with API Testing, YAML Locators, and CI/CD Integration",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:headed": "cypress run --headed",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "cy:run:edge": "cypress run --browser edge",
    "cy:run:electron": "cypress run --browser electron",
    "test:smoke": "cypress run --env grepTags=@smoke",
    "test:regression": "cypress run --env grepTags=@regression",
    "test:api": "cypress run --spec 'cypress/e2e/api/**/*.cy.js'",
    "test:ui": "cypress run --spec 'cypress/e2e/ui/**/*.cy.js'",
    "test:parallel": "cypress run --parallel --record",
    "test:qa": "cypress run --env configFile=qa",
    "test:staging": "cypress run --env configFile=staging",
    "test:prod": "cypress run --env configFile=prod",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "report:merge": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochawesome.json",
    "report:generate": "marge cypress/reports/mochawesome.json -f report -o cypress/reports/html",
    "report:full": "npm run report:merge && npm run report:generate",
    "clean:reports": "rm -rf cypress/reports/* allure-results/* allure-report/*",
    "lint": "eslint cypress --ext .js",
    "lint:fix": "eslint cypress --ext .js --fix"
  },
  "keywords": [
    "cypress",
    "test-automation",
    "e2e-testing",
    "api-testing",
    "javascript"
  ],
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^20.0.0",
    "@cypress/grep": "^4.0.1",
    "@shelex/cypress-allure-plugin": "^2.40.2",
    "allure-commandline": "^2.25.0",
    "cypress": "^13.6.0",
    "cypress-mochawesome-reporter": "^3.8.0",
    "cypress-multi-reporters": "^1.6.4",
    "eslint": "^8.56.0",
    "eslint-plugin-cypress": "^2.15.1",
    "js-yaml": "^4.1.0",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "nodemailer": "^6.9.7"
  }
}
