# ===========================================
# CYPRESS TEST AUTOMATION - ENVIRONMENT FILE
# ===========================================
# Copy this file to .env and update with your values
# NEVER commit .env file with real credentials

# Application URLs
CYPRESS_BASE_URL=https://qa.example.com
CYPRESS_API_BASE_URL=https://api.qa.example.com

# Test User Credentials (for login tests)
CYPRESS_TEST_USERNAME=testuser@example.com
CYPRESS_TEST_PASSWORD=your_secure_password

# API Authentication
CYPRESS_API_KEY=your_api_key_here
CYPRESS_API_SECRET=your_api_secret_here

# Cypress Dashboard (for parallel runs and recording)
CYPRESS_PROJECT_ID=your_project_id
CYPRESS_RECORD_KEY=your_record_key

# Email Configuration (for sending reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com

# AWS Configuration (for AWS CodePipeline)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_subscription_id
AZURE_TENANT_ID=your_tenant_id
